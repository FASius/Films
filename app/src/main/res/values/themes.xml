<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Films" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.Films.FilmTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/film_title</item>
    </style>
    <style name="Theme.Films.FilmRating">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/film_rating</item>
    </style>

    <dimen name="film_rating">12sp</dimen>
</resources>