<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/actor_photo"
        android:layout_width="36dp"
        android:layout_height="57dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/green" />

    <TextView
        android:id="@+id/actor_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/actor_photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tom Hanks" />

    <TextView
        android:id="@+id/actor_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/actor_photo"
        app:layout_constraintTop_toBottomOf="@id/actor_real_name"
        tools:text="Paul Edgecomb" />
</androidx.constraintlayout.widget.ConstraintLayout>